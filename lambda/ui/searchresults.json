{
    "type": "APL",
    "version": "1.1",
    "settings": {},
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.0.0"
        }
    ],
    "resources": [
        {
            "description": "Stock color for the light theme",
            "colors": {
                "colorTextPrimary": "#151920",
                "colorTextSecondary": "#82368c"
            }
        },
        {
            "description": "Stock color for the dark theme",
            "when": "${viewport.theme == 'dark'}",
            "colors": {
                "colorTextPrimary": "#f0f1ef"
            }
        },
        {
            "description": "Standard font sizes",
            "dimensions": {
                "textSizeBody": 48,
                "textSizePrimary": 27,
                "textSizeSecondary": 23,
                "textSizeDetails": 20,
                "textSizeSecondaryHint": 25
            }
        },
        {
            "description": "Common spacing values",
            "dimensions": {
                "spacingThin": 6,
                "spacingSmall": 12,
                "spacingMedium": 24,
                "spacingLarge": 48,
                "spacingExtraLarge": 72
            }
        },
        {
            "description": "Common margins and padding",
            "dimensions": {
                "marginTop": 40,
                "marginLeft": 60,
                "marginRight": 60,
                "marginBottom": 40
            }
        }
    ],
    "styles": {
        "textStyleBase": {
            "description": "Base font description; set color",
            "values": [
                {
                    "color": "@colorTextPrimary"
                }
            ]
        },
        "textStyleBase0": {
            "description": "Thin version of basic font",
            "extend": "textStyleBase",
            "values": {
                "fontWeight": "100"
            }
        },
        "textStyleBase1": {
            "description": "Light version of basic font",
            "extend": "textStyleBase",
            "values": {
                "fontWeight": "300"
            }
        },
        "textStyleBase2": {
            "description": "Regular version of basic font",
            "extend": "textStyleBase",
            "values": {
                "fontWeight": "500"
            }
        },
        "mixinBody": {
            "values": {
                "fontSize": "@textSizeBody"
            }
        },
        "mixinPrimary": {
            "values": {
                "fontSize": "@textSizePrimary"
            }
        },
        "mixinDetails": {
            "values": {
                "fontSize": "@textSizeDetails"
            }
        },
        "mixinSecondary": {
            "values": {
                "fontSize": "@textSizeSecondary"
            }
        },
        "textStylePrimary": {
            "extend": [
                "textStyleBase1",
                "mixinPrimary"
            ]
        },
        "textStyleSecondary": {
            "extend": [
                "textStyleBase0",
                "mixinSecondary"
            ]
        },
        "textStyleBody": {
            "extend": [
                "textStyleBase1",
                "mixinBody"
            ]
        },
        "textStyleSecondaryHint": {
            "values": {
                "fontFamily": "Bookerly",
                "fontStyle": "italic",
                "fontSize": "@textSizeSecondaryHint",
                "color": "@colorTextPrimary"
            }
        },
        "textStyleDetails": {
            "extend": [
                "textStyleBase2",
                "mixinDetails"
            ]
        }
    },
    "onMount": [],
    "graphics": {},
    "commands": {},
    "layouts": {
        "FullHorizontalListItem": {
            "parameters": [
                "listLength",
                "image",
                "primaryText",
                "secondaryText"
            ],
            "item": [
                {
                    "type": "Container",
                    "width": "100vh",
                    "height": "100vh",
                    "alignItems": "center",
                    "justifyContent": "end",
                    "items": [
                        {
                            "type": "AlexaHeader",
                            "headerTitle": "${title}",
                            "headerAttributionImage": "${logo}",
                            "top": "0vh",
                            "grow": 0
                        },
                        {
                            "type": "Image",
                            "width": "70vw",
                            "height": "45vh",
                            "source": "${data.imageUrl}",
                            "scale": "best-fit",
                            "borderRadius": "2.5vh"
                        },
                        {
                            "type": "Text",
                            "style": "textStyleBody",
                            "maxLines": 1,
                            "text": "${primaryText}"
                        },
                        {
                            "type": "Text",
                            "style": "textStyleDetails",
                            "text": "${secondaryText}"
                        },
                        {
                            "type": "Text",
                            "text": "${ordinal} | ${listLength}",
                            "paddingBottom": "20dp",
                            "color": "white",
                            "spacing": "5dp"
                        }
                    ]
                }
            ]
        },
        "HorizontalListItem": {
            "parameters": [
                "primaryText",
                "secondaryText",
                "image"
            ],
            "item": [
                {
                    "type": "Container",
                    "minWidth": "312",
                    "maxWidth": "528",
                    "height": "100%",
                    "paddingLeft": "16",
                    "paddingRight": "16",
                    "alignItems": "center",
                    "items": [
                        {
                            "type": "Image",
                            "width": "40vh",
                            "height": "40vh",
                            "source": "${image}",
                            "borderRadius": "1.4vh"
                        },
                        {
                            "type": "Text",
                            "style": "textStyleSecondary",
                            "maxLines": 1,
                            "text": "${primaryText}",
                            "spacing": "12"
                        },
                        {
                            "type": "Text",
                            "style": "textStyleDetails",
                            "color": "@colorTextSecondary",
                            "text": "${secondaryText}",
                            "spacing": "4"
                        }
                    ]
                }
            ]
        },
        "ListTemplate2": {
            "parameters": [
                "backgroundImage",
                "title",
                "logo",
                "hintText",
                "listData"
            ],
            "items": [
                {
                    "when": "${viewport.shape == 'round'}",
                    "type": "Container",
                    "height": "100%",
                    "width": "100%",
                    "items": [
                        {
                            "type": "Sequence",
                            "scrollDirection": "horizontal",
                            "data": "${listData}",
                            "height": "100%",
                            "width": "100%",
                            "numbered": true,
                            "item": {
                                "type": "TouchWrapper",
                                "onPress": [{
                                  "type": "SendEvent",
                                  "arguments": [
                                    "ItemSelected",
                                    "${ordinal}",
                                    "${data}"
                                  ]
                                }],
                                "item": [
                                    {
                                        "listLength": "${payload.viewData.results.length}",
                                        "image": "${data.imageUrl}",
                                        "primaryText": "${data.name}",
                                        "secondaryText": "${data.set}",
                                        "type": "FullHorizontalListItem"
                                    }
                                ]
                            }
                        }
                    ]
                },
                {
                    "type": "Container",
                    "height": "100vh",
                    "width": "100vw",
                    "items": [
                        {
                            "type": "Image",
                            "source": "${backgroundImage}",
                            "scale": "best-fill",
                            "width": "100vw",
                            "height": "100vh",
                            "position": "absolute"
                        },
                        {
                            "type": "AlexaHeader",
                            "headerTitle": "${title}",
                            "headerAttributionImage": "${logo}"
                        },
                        {
                            "type": "Sequence",
                            "scrollDirection": "horizontal",
                            "paddingLeft": "@marginLeft",
                            "paddingRight": "@marginRight",
                            "data": "${listData}",
                            "height": "70vh",
                            "width": "100%",
                            "numbered": true,
                            "item": {
                                "type": "TouchWrapper",
                                "onPress": [{
                                  "type": "SendEvent",
                                  "arguments": [
                                    "ItemSelected",
                                    "${ordinal}",
                                    "${data}"
                                  ]
                                }],
                                "item": [
                                    {
                                        "primaryText": "${data.name}",
                                        "secondaryText": "${data.set}",
                                        "image": "${data.imageUrl}",
                                        "type": "HorizontalListItem"
                                    }
                                ]
                            }
                        },
                        {
                            "hintText": "${hintText}",
                            "type": "AlexaFooter",
                            "position": "absolute",
                            "top": "85vh"
                        }
                    ]
                }
            ]
        }
    },
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "item": [
            {
                "backgroundImage": "${payload.viewData.backgroundUrl}",
                "title": "${payload.viewData.title}",
                "logo": "${payload.viewData.logoUrl}",
                "hintText": "${payload.viewData.hintText}",
                "listData": "${payload.viewData.results}",
                "type": "ListTemplate2"
            }
        ]
    }
}